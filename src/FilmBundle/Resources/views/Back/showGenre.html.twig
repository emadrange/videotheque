{% extends '::base.html.twig' %}

{% block title %}
    Administration des films - Les genres
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/back.css') }}">
{% endblock %}

{% block body %}
    {% include '@Film/Back/header.html.twig' %}
    <section>
        <h3>Liste des genres</h3>
        <a href="{{ path('admin_genre_insert') }}">Ajouter un genre</a>
    </section>
    <section>
        <ul>
        {% for genre in genres %}
            <li><span class="title">{{ genre.name }}</span>
                <a href="{{ path('admin_genre_modify', {'id': genre.id}) }}" class="ui-state-default ui-corner-all" title="{{ 'list.edit' | trans }}">
                    <span class="ui-icon ui-icon-pencil"></span></a>
                <a href="{{ path('admin_genre_delete', {'id': genre.id}) }}" class="delete ui-state-default ui-corner-all" title="{{ 'list.delete' | trans }}">
                    <sapn class="ui-icon ui-icon-trash"></sapn></a>
            </li>
        {% endfor %}
        </ul>
    </section>
    {% include '@Film/Back/footer.html.twig' %}
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('js/genre.js') }}"></script>
{% endblock %}